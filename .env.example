# ==================================================================================================
# Database Configuration
# ==================================================================================================

# Railway.app automatically provides DATABASE_URL via the PostgreSQL service
# In production, use: ${{Postgres.DATABASE_URL}}

# Local development (Docker or local PostgreSQL)
DATABASE_URL=postgres://aircade:aircade@localhost:5432/aircade

# ==================================================================================================
# Server Configuration
# ==================================================================================================

# Local development
SERVER_HOST=127.0.0.1
SERVER_PORT=3000

# Railway.app production settings
# Use 0.0.0.0 to bind to all interfaces
# Railway provides the PORT variable dynamically
# SERVER_HOST=0.0.0.0
# SERVER_PORT=$PORT

# ==================================================================================================
# Environment Configuration
# ==================================================================================================

# Options: development, staging, production
ENVIRONMENT=development

# ==================================================================================================
# Logging Configuration
# ==================================================================================================

# Options: trace, debug, info, warn, error
LOG_LEVEL=debug

# Rust-specific logging (optional, overrides LOG_LEVEL for specific modules)
# RUST_LOG=aircade_api=debug,tower_http=info,axum=debug,sea_orm=debug

# ==================================================================================================
# Railway.app Specific (Auto-provided)
# ==================================================================================================

# These variables are automatically injected by Railway
# You don't need to set them manually

# PORT=<dynamic>                 # Port to bind to (provided by Railway)
# RAILWAY_ENVIRONMENT=production # Current environment
# RAILWAY_PROJECT_ID=<id>        # Project identifier
# RAILWAY_SERVICE_ID=<id>        # Service identifier
# RAILWAY_DEPLOYMENT_ID=<id>     # Deployment identifier
# RAILWAY_GIT_COMMIT_SHA=<sha>   # Git commit hash
# RAILWAY_GIT_BRANCH=main        # Git branch name

# ==================================================================================================
# CORS Configuration (Optional)
# ==================================================================================================

# Comma-separated list of allowed origins for CORS
# CORS_ALLOWED_ORIGINS=https://aircade.com,https://app.aircade.com

# ==================================================================================================
# Authentication Configuration
# ==================================================================================================

# JWT secret key (REQUIRED - generate a strong random string, minimum 32 characters)
JWT_SECRET=dev-secret-change-me-in-production-please-32chars

# JWT token expiration (in seconds)
JWT_ACCESS_EXPIRATION=900       # 15 minutes
JWT_REFRESH_EXPIRATION=604800   # 7 days

# ==================================================================================================
# OAuth Configuration
# ==================================================================================================

# Google OAuth 2.0
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/api/v1/auth/oauth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:3000/api/v1/auth/oauth/github/callback

# ==================================================================================================
# Frontend Configuration
# ==================================================================================================

FRONTEND_URL=http://localhost:3001

# ==================================================================================================
# Security Configuration (Optional)
# ==================================================================================================

# API rate limiting (requests per minute)
# RATE_LIMIT_REQUESTS=100
